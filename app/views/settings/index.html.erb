<p><%= link_to "Mark All Reviewed", mark_all_reviewed_settings_url, class: "btn btn-primary" %></p>

<table class="table table-striped table-hover auto_size">
  <tr>
    <th>Setting</th>
    <th>Value</th>
    <th></th>
  </tr>

<% @settings.each do |setting| %>
  <tr <%= setting.is_new ? "class=\"new_setting\"".html_safe : "" %>>
    <td><%= setting.name %></td>
    <td><%= best_in_place setting, :value, as: :input, :activator => "#activator_#{setting.name}" %></td>
    <td class=".col-xs-1"><a href="#" id="activator_<%= setting.name %>" class="btn btn-primary btn-xs">Edit</a></td>
  </tr>
<% end %>

</table>