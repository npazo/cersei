<p id="notice"><%= notice %></p>

<div class="post">

  <div class="post-title"><%= @post.title %></div>
  <div class="post-meta text-muted">
    <div><%= icon("terminal") %> <%= @post.date_short %>  / <%= @post.user.display_name %></div>
  </div>
  
  <div class="post-body"><%= @markdown.render(@post.processed_body).html_safe %>
  
  <% if user_signed_in? %><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %><% end %>

</div>