<h4 id="headline" class="hidden-xs"><%= Setting.get("site_headline") %></h4>

<hr class="main-separator hidden-xs" />

<% @posts.each do |post| %>
    <div class="post">
        <div class="post-title"><%= link_to post.title, post.slug %></div>
        <div class="post-meta">
          <div class="post-date"><%= post.date_short %></div> <div class="post-user"> | <%= post.user.display_name %></div>
        </div>
        <div class="post-body"><%= @markdown.render(post.processed_body(true)).html_safe %></div>
        <% if post.has_more? %>
          <div class="post-more"><%= link_to "Read More...", post %></div>
        <% end %>
        <hr class="post-separator" />
    </div>
<% end %>

