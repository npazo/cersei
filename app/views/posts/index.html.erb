

<% @posts.each do |post| %>
    <div class="post">
        <div class="post-title"><%= link_to post.title, post %></div>
        <div class="post-date"><%= post.date.strftime("%b %-e %Y") %></div> <div class="post-user">by <%= post.username %></div>
        <div class="post-body"><%= post.body %></div>
        <% if user_signed_in? %>
            <div><%= link_to 'Edit', edit_post_path(post) %></div>
            <div><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        <% end %>
    </div>
<% end %>

